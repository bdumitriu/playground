% define lstlisting defaults
\lstset{basicstyle=\scriptsize\ttfamily}
\lstset{tabsize=4}
\lstset{emptylines=1} % maximum 1 empty line allowed
\lstset{captionpos=b} % caption at bottom of listing
\lstset{breaklines=true}
\lstset{showspaces=false}
\lstset{showstringspaces=false}

\lstdefinelanguage{stratego}{
% This is commented out because it sometimes breaks code,
% when one of these symbols would start a new LaTeX page.
%  otherkeywords={=,<+,/,\\*,->,>,\{,\},;,:},
  keywords=[2]{module,imports,signature,constructors,strategies,
               rules,where,if,then,else,end,let,in},
  keywords=[3]{id,fail,try,all,some,one},
  sensitive=true,
  string=[b]",
  comment=[l]//,
  morecomment=[s]{/*}{*/}
}[keywords,comments,strings]

\lstnewenvironment{javacode}
{
  \lstset{language=java}
}
{}

\lstnewenvironment{javacodenr}
{
  \lstset{language=java,numbers=left,numberstyle=\tiny}
}
{}

