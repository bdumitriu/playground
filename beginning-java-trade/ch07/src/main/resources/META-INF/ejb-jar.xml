<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
		version="3.1">
	<enterprise-beans>
		<session>
			<ejb-name>ItemConverterEJB</ejb-name>
			<ejb-class>ItemConverterEJB</ejb-class>
			<env-entry>
				<env-entry-name>exchangeRateEntry</env-entry-name>
				<env-entry-type>java.lang.Float</env-entry-type>
				<env-entry-value>0.8</env-entry-value>
			</env-entry>
		</session>
		<session>
			<ejb-name>ShoppingCartEJB</ejb-name>
			<ejb-class>ShoppingCartEJB</ejb-class>
			<env-entry>
				<env-entry-name>currencyEntry</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
