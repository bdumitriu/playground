Program conversie_din_scriere_araba_in_scriere_romana;
uses crt;
var n,v9,v5,v4,v1:1..4999;               {numar,variabile de lucru}
    m,d,c:'C'..'X';                      {cifre romane}
    ordin:(unitati,zeci,sute);
begin
writeln('Acesta este un program care daca ii vati introduce un nr. scris ');
writeln('cu cifre arabe vi-l va trece pe acesta in cifre romane');
write('Introduceti n ');read(n);
write('n scris cu cifre romane este ');
while n>=1000 do begin
                 n:=n-1000;
                 write('M');
                 end;
v9:=900 ; v5:=500 ; v4:=400 ; v1:=100 ; ordin:=sute;
while n>0 do begin
case ordin of
   sute:begin m:='M' ; d:='D' ; c:='C' end;
   zeci:begin m:='C' ; d:='L' ; c:='X' end;
unitati:begin m:='X' ; d:='V' ; c:='I' end;
             end;
case n div v1 of  {daca prima cifra din n ramas este}
   9:begin n:=n-v9 ; write(c,m); end;
   4:begin n:=n-v4 ; write(c,d); end;
5..8:begin n:=n-v5 ; write(d) ; end;
   end;
while n>v1 do begin {prima cifra 1,2,3}
n:=n-v1 ; write(c) end;
v9:=v9 div 10 ; v5:=v5 div 10;
v4:=v4 div 10 ; v1:=v1 div 10;
if ordin>unitati then ordin:=pred(ordin)
end;
writeln;
while not keypressed do;
end.



























































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































